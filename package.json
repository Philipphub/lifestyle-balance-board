{
  "name": "lifestyle-balance-board",
  "version": "1.0.0",
  "description": "A comprehensive lifestyle balance tracking application",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "cd frontend && npm run test:run && cd ../backend && npm test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["lifestyle", "balance", "tracking", "nextjs", "express"],
  "author": "",
  "license": "ISC"
}